<div class="flex flex-wrap border-b py-4 ml-3">
  <div class="flex flex-col w-full md:w-2/3 pr-4">
    <div class="mb-2">
      <strong>Title:</strong> <%= article.title %>
    </div>
    <div class="mb-2">
      <strong>Description:</strong> <%= article.body %>
    </div>
    <div class="mb-2">
      <strong>Status:</strong> <%= article.published ? 'Published' : 'Draft' %>
    </div>
    <div class="mb-2">
      <strong>Title file:</strong>
      <% if article.image.attached? && article.image.persisted? %>
      <%= article.image.filename.to_s %>
      <% else %>
      No picture attached
      <% end %>
    </div>
    <div class="mb-2 space-x-2">
      <%= link_to 'Show this article', article_path(article), class: "bg-darkgreen text-white font-bold py-2 px-4 rounded-full" %>
      <%= link_to 'Edit article', edit_article_path(article), class: "bg-mustard  font-bold py-2 px-4 rounded-full" %>
      <%= link_to 'Delete this article', article_path(article), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete the article?" }, class: "bg-red text-white font-bold py-2 px-4 rounded-full" %>
    </div>
  </div>
  <div class="w-full md:w-1/3 flex justify-center items-center">
    <% if article.image.attached? && article.image.persisted? %>
      <%= image_tag article.image.variant(resize_to_fit: [250, 250]), class: "pl-5" %>
    <% else %>
      <p class="mb-2">No picture attached</p>
    <% end %>
  </div>
</div>



