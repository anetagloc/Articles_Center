<%= form_with(model: article, local: true, class: "space-y-6") do |form| %>
  <% if article.errors.any? %>
    <div id="error_explanation" class="bg-red-500 border border-red-600 text-white px-4 py-3 rounded-lg">
      <h2 class="font-bold mb-2 text-lg"><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>
      <ul class="list-disc pl-5 space-y-1">
        <% article.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title, class: "block text-md font-bold text-gray" %>
    <%= form.text_field :title, class: "mt-1 block w-full shadow-sm border-gray-300 rounded-md focus:ring-darkgreen focus:border-darkgreen sm:text-sm" %>
  </div>

  <div class="field">
    <%= form.label :description, class: "block text-md font-bold text-gray" %>
    <%= form.text_area :body, class: "mt-1 block w-full shadow-sm border-gray-300 rounded-md focus:ring-darkgreen focus:border-darkgreen sm:text-sm" %>
  </div>

  <div class="field">
    <%= form.label :published, class: "block text-md font-bold text-gray" %>
    <%= form.check_box :published, class: "mt-1 block h-4 w-4 text-darkgreen focus:ring-darkgreen border-gray-300 rounded" %>
  </div>

  <div class="field">
    <%= form.file_field :image, class: "mt-2 w-full text-md text-gray border border-gray-300 rounded-lg cursor-pointer bg-gray-50 focus:outline-none focus:ring-darkgreen focus:border-darkgreen" %>
  </div>

  <div class="actions">
    <button class="bg-mustard hover:bg-yellow-400 text-dark font-bold py-2 px-4 mb-2 rounded-full">
      <%= form.submit %>
    </button>
  </div>
<% end %>
